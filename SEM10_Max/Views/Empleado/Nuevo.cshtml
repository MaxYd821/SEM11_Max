@model SEM10_Max.Models.Empleado;

<div>
    <div class="col-sm-8 offset-sm-2">
        <h2>
            Nuevo empleado
        </h2>
        <form asp-controller="Empleado" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" type="text" required asp-for="Nombre"/>
            </div>
            <div class="mb-3">
                <label>Apellido</label>
                <input class="form-control" type="text" required asp-for="Apellido"/>
            </div>
            <div class="mb-3">
                <label>Correo</label>
                <input class="form-control" type="text" required asp-for="Email"/>
            </div>
            <div class="mb-3">
                <label>Fecha Contrato</label>
                <input class="form-control" type="date" required asp-for="FechaContratacion"/>
            </div>
            <div class="mb-3">
                <input class="form-check-input" type="checkbox" id="ChkActivo" asp-for="Estado"/>
                <label class="form-check" for="ChkActivo">
                    Activo
                </label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">
                    Guardar
                </button>
                <a asp-controller="Empleado" asp-action="Lista" class="btn btn-warning">
                    Volver
                </a>
            </div>
        </form>
    </div>
</div>
